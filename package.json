{
  "name": "ekscss-repl",
  "version": "0.0.25",
  "description": "REPL web app to live compile XCSS into CSS with ekscss",
  "repository": "maxmilton/ekscss-repl",
  "author": "Max Milton <max@happycode.ltd>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "pnpm run prebuild && NODE_ENV=production node build.mjs",
    "dev": "NODE_ENV=development node build.mjs",
    "lint": "pnpm run lint:css && pnpm run lint:js && pnpm run lint:ts",
    "lint:css": "stylelint --ignore-path .gitignore '**/*.{css,xcss}'",
    "lint:js": "eslint --ignore-path .gitignore --ext .ts,.js,.mjs,.cjs .",
    "lint:ts": "tsc --project test",
    "prebuild": "rm -rf dist; cp -r static dist",
    "serve": "sirv dist --dev --cors",
    "test": "c8 --all --include=src --reporter=text --reporter=lcovonly uvu -r tsm test '\\.test\\.ts$'",
    "test-e2e": "node -r tsm test/e2e/index.ts"
  },
  "dependencies": {
    "@ekscss/framework": "0.0.43",
    "ekscss": "0.0.13",
    "stage1": "0.7.2"
  },
  "devDependencies": {
    "@maxmilton/stylelint-config": "0.0.12",
    "@types/csso": "5.0.0",
    "@types/jsdom": "21.1.1",
    "@types/node": "18.16.16",
    "@typescript-eslint/eslint-plugin": "5.59.8",
    "@typescript-eslint/parser": "5.59.8",
    "c8": "7.14.0",
    "esbuild": "0.17.19",
    "esbuild-minify-templates": "0.10.0",
    "esbuild-plugin-ekscss": "0.0.13",
    "eslint": "8.42.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-security": "1.7.1",
    "eslint-plugin-unicorn": "46.0.1",
    "get-port": "6.1.2",
    "git-ref": "0.3.1",
    "jsdom": "21.1.2",
    "kleur": "4.1.5",
    "lightningcss": "1.20.0",
    "pirates": "4.0.5",
    "playwright-chromium": "1.33.0",
    "prettier": "2.8.8",
    "prettier-plugin-pkg": "0.17.1",
    "prettier-plugin-sh": "0.12.8",
    "purgecss": "5.0.0",
    "sirv": "2.0.3",
    "sirv-cli": "2.0.2",
    "stylelint": "15.6.3",
    "stylelint-config-standard": "33.0.0",
    "terser": "5.17.1",
    "trackx": "0.6.0",
    "tsm": "2.3.0",
    "typescript": "4.9.5",
    "uvu": "0.5.6"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "pluginSearchDirs": [
      "."
    ]
  },
  "stylelint": {
    "reportInvalidScopeDisables": true,
    "reportNeedlessDisables": true,
    "extends": [
      "stylelint-config-standard",
      "@maxmilton/stylelint-config"
    ],
    "ignoreFiles": [
      "**/dist/**",
      "**/node_modules/**"
    ],
    "rules": {
      "import-notation": null
    }
  }
}
