{
  "name": "ekscss-repl",
  "version": "0.0.26",
  "description": "REPL web app to live compile XCSS into CSS with ekscss",
  "repository": "maxmilton/ekscss-repl",
  "author": "Max Milton <max@happyhackers.xyz>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production bun build.ts",
    "dev": "NODE_ENV=development bun build.ts",
    "lint": "bun run lint:css && bun run lint:js && bun run lint:ts",
    "lint:css": "stylelint --ignore-path .gitignore '**/*.{css,xcss}'",
    "lint:js": "eslint --ignore-path .gitignore --ext .ts,.js,.mjs,.cjs .",
    "lint:ts": "tsc --noEmit",
    "prebuild": "rm -rf dist; cp -r static dist",
    "serve": "bun http.ts",
    "test": "bun test --preload ./test/setup.ts test/unit --coverage",
    "test:e2e": "TZ=UTC playwright test",
    "test:e2e:debug": "bun run test:e2e --debug",
    "test:e2e:ui": "bun run test:e2e --ui"
  },
  "dependencies": {
    "ekscss": "0.0.17",
    "stage1": "0.8.0-next.4"
  },
  "devDependencies": {
    "@ekscss/framework": "0.0.47",
    "@maxmilton/stylelint-config": "0.0.13",
    "@playwright/test": "1.37.1",
    "@types/csso": "5.0.1",
    "@typescript-eslint/eslint-plugin": "6.7.3",
    "@typescript-eslint/parser": "6.7.3",
    "bun-types": "1.0.4",
    "csso": "5.0.5",
    "eslint": "8.50.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-security": "1.7.1",
    "eslint-plugin-unicorn": "48.0.1",
    "happy-dom": "11.2.0",
    "lightningcss": "1.22.0",
    "prettier": "3.0.3",
    "prettier-plugin-pkg": "0.18.0",
    "purgecss": "5.0.0",
    "stylelint": "15.10.3",
    "stylelint-config-standard": "34.0.0",
    "terser": "5.20.0",
    "trackx": "0.6.1",
    "typescript": "5.2.2"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": [
      "prettier-plugin-pkg"
    ],
    "overrides": [
      {
        "files": [
          "*.spec.ts",
          "*.test.ts"
        ],
        "options": {
          "printWidth": 100
        }
      }
    ]
  },
  "stylelint": {
    "reportInvalidScopeDisables": true,
    "reportNeedlessDisables": true,
    "extends": [
      "stylelint-config-standard",
      "@maxmilton/stylelint-config"
    ],
    "ignoreFiles": [
      "**/dist/**",
      "**/node_modules/**"
    ],
    "rules": {
      "import-notation": null,
      "function-no-unknown": null,
      "media-query-no-invalid": null
    }
  }
}
