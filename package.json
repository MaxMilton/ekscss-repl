{
  "name": "ekscss-repl",
  "version": "0.0.18",
  "description": "REPL web app to live compile XCSS into CSS with ekscss",
  "repository": "maxmilton/ekscss-repl",
  "author": "Max Milton <max@happycode.ltd>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "pnpm run prebuild && NODE_ENV=production node build.mjs",
    "dev": "NODE_ENV=development node build.mjs",
    "lint": "pnpm run lint:css && pnpm run lint:js && pnpm run lint:ts",
    "lint:css": "stylelint --ignore-path .gitignore '**/*.{css,xcss}'",
    "lint:js": "eslint --ignore-path .gitignore --ext .ts,.js,.mjs,.cjs .",
    "lint:ts": "tsc --project test",
    "prebuild": "rm -rf dist; cp -r static dist",
    "serve": "sirv dist --dev --cors",
    "test": "c8 --all --include=src --reporter=text --reporter=lcovonly uvu -r tsm test '\\.test\\.ts$'",
    "test-e2e": "node -r tsm test/e2e/index.ts"
  },
  "dependencies": {
    "@ekscss/framework": "0.0.40",
    "ekscss": "0.0.13",
    "stage1": "0.3.0"
  },
  "devDependencies": {
    "@maxmilton/stylelint-config": "0.0.10",
    "@types/csso": "5.0.0",
    "@types/jsdom": "16.2.14",
    "@types/node": "17.0.26",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.21.0",
    "c8": "7.11.2",
    "csso": "5.0.3",
    "esbuild": "0.14.38",
    "esbuild-minify-templates": "0.8.0",
    "esbuild-plugin-ekscss": "0.0.10",
    "eslint": "8.14.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-unicorn": "42.0.0",
    "get-port": "6.1.2",
    "git-ref": "0.3.1",
    "jsdom": "19.0.0",
    "kleur": "4.1.4",
    "pirates": "4.0.5",
    "playwright-chromium": "1.21.1",
    "prettier": "2.6.2",
    "prettier-plugin-pkg": "0.13.0",
    "prettier-plugin-sh": "0.10.1",
    "purgecss": "4.1.3",
    "sirv": "2.0.2",
    "sirv-cli": "2.0.2",
    "stylelint": "14.8.1",
    "stylelint-config-standard": "25.0.0",
    "terser": "5.13.1",
    "tsm": "2.2.1",
    "typescript": "4.6.4",
    "uvu": "0.5.3"
  },
  "pnpm": {
    "overrides": {
      "source-map": "~0.8.0-beta.0"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": [
      "./node_modules/prettier-plugin-pkg",
      "./node_modules/prettier-plugin-sh"
    ]
  },
  "stylelint": {
    "reportInvalidScopeDisables": true,
    "reportNeedlessDisables": true,
    "extends": [
      "stylelint-config-standard",
      "@maxmilton/stylelint-config"
    ],
    "ignoreFiles": [
      "**/dist/**",
      "**/node_modules/**"
    ]
  }
}
