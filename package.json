{
  "name": "ekscss-repl",
  "version": "0.0.23",
  "description": "REPL web app to live compile XCSS into CSS with ekscss",
  "repository": "maxmilton/ekscss-repl",
  "author": "Max Milton <max@happycode.ltd>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "pnpm run prebuild && NODE_ENV=production node build.mjs",
    "dev": "NODE_ENV=development node build.mjs",
    "lint": "pnpm run lint:css && pnpm run lint:js && pnpm run lint:ts",
    "lint:css": "stylelint --ignore-path .gitignore '**/*.{css,xcss}'",
    "lint:js": "eslint --ignore-path .gitignore --ext .ts,.js,.mjs,.cjs .",
    "lint:ts": "tsc --project test",
    "prebuild": "rm -rf dist; cp -r static dist",
    "serve": "sirv dist --dev --cors",
    "test": "c8 --all --include=src --reporter=text --reporter=lcovonly uvu -r tsm test '\\.test\\.ts$'",
    "test-e2e": "node -r tsm test/e2e/index.ts"
  },
  "dependencies": {
    "@ekscss/framework": "0.0.41",
    "ekscss": "0.0.13",
    "stage1": "0.4.1"
  },
  "devDependencies": {
    "@maxmilton/stylelint-config": "0.0.10",
    "@types/csso": "5.0.0",
    "@types/jsdom": "20.0.0",
    "@types/node": "18.7.18",
    "@typescript-eslint/eslint-plugin": "5.38.0",
    "@typescript-eslint/parser": "5.38.0",
    "c8": "7.12.0",
    "esbuild": "0.15.8",
    "esbuild-minify-templates": "0.9.2",
    "esbuild-plugin-ekscss": "0.0.12",
    "eslint": "8.23.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-security": "1.5.0",
    "eslint-plugin-unicorn": "43.0.2",
    "get-port": "6.1.2",
    "git-ref": "0.3.1",
    "jsdom": "20.0.0",
    "kleur": "4.1.5",
    "lightningcss": "1.16.0",
    "pirates": "4.0.5",
    "playwright-chromium": "1.26.0",
    "prettier": "2.7.1",
    "prettier-plugin-pkg": "0.17.1",
    "prettier-plugin-sh": "0.12.8",
    "purgecss": "5.0.0",
    "sirv": "2.0.2",
    "sirv-cli": "2.0.2",
    "stylelint": "14.12.1",
    "stylelint-config-standard": "28.0.0",
    "terser": "5.15.0",
    "trackx": "0.5.0",
    "tsm": "2.2.2",
    "typescript": "4.8.3",
    "uvu": "0.5.6"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "pluginSearchDirs": [
      "."
    ]
  },
  "stylelint": {
    "reportInvalidScopeDisables": true,
    "reportNeedlessDisables": true,
    "extends": [
      "stylelint-config-standard",
      "@maxmilton/stylelint-config"
    ],
    "ignoreFiles": [
      "**/dist/**",
      "**/node_modules/**"
    ]
  }
}
