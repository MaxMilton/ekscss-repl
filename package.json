{
  "name": "ekscss-repl",
  "version": "0.0.13",
  "description": "REPL web app to live compile XCSS into CSS with ekscss",
  "repository": "maxmilton/ekscss-repl",
  "author": "Max Milton <max@happycode.ltd>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "pnpm run prebuild && NODE_ENV=production node build.mjs",
    "dev": "NODE_ENV=development node build.mjs",
    "lint": "pnpm run lint:css && pnpm run lint:js && pnpm run lint:ts",
    "lint:css": "echo 'TODO: CSS linting'; exit 0",
    "lint:js": "eslint --ignore-path .gitignore --ext .ts,.js,.mjs,.cjs .",
    "lint:ts": "tsc --project test",
    "prebuild": "rm -rf dist; cp -r static dist",
    "serve": "sirv dist --dev --cors",
    "test": "c8 --all --include=src --reporter=text --reporter=lcovonly uvu -r tsm test '\\.test\\.ts$'",
    "test-e2e": "node -r tsm test/e2e/index.ts"
  },
  "dependencies": {
    "@ekscss/framework": "0.0.29",
    "ekscss": "0.0.10",
    "stage1": "0.0.11"
  },
  "devDependencies": {
    "@types/csso": "4.2.0",
    "@types/jsdom": "16.2.13",
    "@types/node": "16.11.6",
    "@typescript-eslint/eslint-plugin": "5.2.0",
    "@typescript-eslint/parser": "5.2.0",
    "c8": "7.10.0",
    "csso": "4.2.0",
    "esbuild": "0.13.12",
    "esbuild-minify-templates": "0.6.0",
    "esbuild-plugin-ekscss": "0.0.7",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-airbnb-typescript": "14.0.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-unicorn": "37.0.1",
    "get-port": "6.0.0",
    "git-ref": "0.3.0",
    "jsdom": "18.0.0",
    "kleur": "4.1.4",
    "pirates": "4.0.1",
    "playwright-chromium": "1.16.2",
    "prettier": "2.4.1",
    "prettier-plugin-pkg": "0.10.0",
    "prettier-plugin-sh": "0.7.1",
    "purgecss": "4.0.3",
    "sirv": "1.0.18",
    "sirv-cli": "1.0.14",
    "terser": "5.9.0",
    "tsm": "2.1.4",
    "typescript": "4.4.4",
    "uvu": "0.5.2"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": [
      "./node_modules/prettier-plugin-pkg",
      "./node_modules/prettier-plugin-sh"
    ]
  }
}
